set nocompatible

filetype on
syntax on

au BufNewFile,BufRead *.scala set filetype=scala

set tabstop=4 shiftwidth=4 softtabstop=0
set autoindent smartindent

set enc=utf-8
set fenc=utf-8
set fencs=utf-8

set wrapscan
set incsearch
set hlsearch

set nobackup
set autoread

set number
set showmode
set title
set ruler
set showcmd
set showmatch
set laststatus=2
set wrap
